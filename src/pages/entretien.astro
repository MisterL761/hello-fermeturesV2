---
import Layout from '../layouts/Layout.astro';
---

<Layout
    title="Guide d'entretien des produits - Hello Fermetures"
    description="Guide d'entretien pour fenêtres, portes, volets, portails et stores. Découvrez nos conseils pour prolonger la durée de vie de vos produits Hello Fermetures."
>

<style>
    .container-entretien {
        max-width: 1300px;
        margin: 0 auto;
        padding: 30px 20px;
        margin-top: 180px;
        transition: margin-top 0.3s ease;
    }

    .title-main {
        font-size: 3rem;
        text-align: center;
        margin-bottom: 50px;
        position: relative;
        animation: fadeInDown 0.6s ease;
    }

    .title-main::after {
        content: '';
        position: absolute;
        bottom: -15px;
        left: 50%;
        transform: translateX(-50%);
        width: 80px;
        height: 4px;
        background: linear-gradient(90deg, #ffb103, #ff8c00);
    }

    .category-title {
        font-size: 2.2rem;
        margin: 60px 0 30px;
        color: #ffb103;
        position: relative;
        padding-bottom: 10px;
        animation: slideInLeft 0.6s ease;
    }

    .category-title::after {
        content: '';
        position: absolute;
        bottom: 0;
        left: 0;
        width: 60px;
        height: 3px;
        background: linear-gradient(90deg, #ffb103, #ff8c00);
    }

    .product {
        display: flex;
        align-items: flex-start;
        background: rgba(255, 255, 255, 0.05);
        border: 1px solid rgba(255, 255, 255, 0.15);
        border-radius: 15px;
        padding: 25px;
        margin-bottom: 25px;
        backdrop-filter: blur(10px);
        box-shadow: 0 4px 15px rgba(0, 0, 0, 0.4);
        transition: transform 0.3s ease, box-shadow 0.3s ease;
        animation: fadeInUp 0.5s ease backwards;
    }

    .product:hover {
        transform: translateY(-5px);
        box-shadow: 0 8px 25px rgba(0, 0, 0, 0.4), 0 0 15px rgba(255, 177, 3, 0.2);
    }

    .product-image {
        width: 120px;
        height: 120px;
        object-fit: cover;
        border-radius: 10px;
        margin-right: 25px;
        border: 2px solid rgba(255, 255, 255, 0.15);
        transition: transform 0.3s ease;
        flex-shrink: 0;
    }

    .product:hover .product-image {
        transform: scale(1.05);
    }

    .product-content {
        flex: 1;
    }

    .product-content h3 {
        font-size: 1.6rem;
        margin-top: 0;
        color: #ffffff;
        transition: color 0.3s ease;
    }

    .product-content h4 {
        font-size: 1.2rem;
        color: #cccccc;
        margin: 15px 0 10px;
    }

    .maintenance-tips ul {
        padding-left: 25px;
        color: #cccccc;
        list-style-type: disc;
    }

    .frequency-table {
        width: 100%;
        border-collapse: collapse;
        margin: 30px 0;
        background: rgba(255, 255, 255, 0.05);
        border-radius: 10px;
        overflow: hidden;
        box-shadow: 0 4px 15px rgba(0, 0, 0, 0.4);
    }

    .frequency-table th, .frequency-table td {
        border: 1px solid rgba(255, 255, 255, 0.15);
        padding: 15px;
        text-align: left;
        color: #cccccc;
        transition: background 0.3s ease;
    }

    .frequency-table th {
        background: linear-gradient(135deg, #ffb103, #ff8c00);
        color: #000;
        font-weight: 600;
    }

    .frequency-table tr:nth-child(even) {
        background: rgba(0, 0, 0, 0.3);
    }

    .frequency-table tr:hover td {
        background: rgba(255, 177, 3, 0.1);
    }

    .warning {
        background: rgba(255, 177, 3, 0.1);
        border-left: 6px solid #ffb103;
        padding: 15px 20px;
        margin: 20px 0;
        border-radius: 5px;
        color: #cccccc;
        animation: fadeIn 0.5s ease;
    }

    .cleaning-products {
        display: flex;
        flex-wrap: wrap;
        gap: 20px;
        margin: 40px 0;
    }

    .cleaning-product {
        flex: 1;
        min-width: 250px;
        background: rgba(255, 255, 255, 0.05);
        padding: 20px;
        border-radius: 10px;
        border: 1px solid rgba(255, 255, 255, 0.15);
        backdrop-filter: blur(10px);
        box-shadow: 0 3px 10px rgba(0, 0, 0, 0.4);
        transition: transform 0.3s ease;
    }

    .cleaning-product:hover {
        transform: translateY(-3px);
    }

    .cleaning-product ul {
        color: #cccccc;
        list-style-type: circle;
    }

    .print-button, .print-card-button, .download-button {
        display: inline-block;
        margin: 20px auto;
        padding: 12px 30px;
        background: linear-gradient(135deg, #ffb103, #ff8c00);
        color: #000;
        border: none;
        border-radius: 30px;
        font-size: 1.1rem;
        font-weight: 600;
        cursor: pointer;
        transition: all 0.3s ease;
        text-align: center;
    }

    .print-card-button {
        margin: 20px 0 0;
        padding: 10px 20px;
        font-size: 1rem;
    }

    .download-button {
        display: none;
    }

    .print-button:hover, .print-card-button:hover, .download-button:hover {
        transform: translateY(-3px);
        box-shadow: 0 6px 15px rgba(255, 177, 3, 0.4);
    }

    .intro-text {
        color: #cccccc;
        max-width: 900px;
        margin: 0 auto 30px;
        text-align: center;
    }

    @media print {
        .product {
            display: none;
        }
        .product.print-selected {
            display: flex;
            background: white;
            border: 1px solid #ddd;
        }
        .product-image {
            width: 80px;
            height: 80px;
        }
        .frequency-table {
            display: none;
        }
    }

    @media (max-width: 768px) {
        .container-entretien {
            padding: 15px;
            margin-top: 140px;
        }
        .title-main {
            font-size: 2.2rem;
        }
        .category-title {
            font-size: 1.8rem;
        }
        .product {
            flex-direction: column;
            padding: 20px;
        }
        .product-image {
            width: 100px;
            height: 100px;
            margin: 0 auto 15px;
        }
        .cleaning-product {
            min-width: 100%;
        }
        .frequency-table {
            display: none;
        }
        .download-button {
            display: block;
        }
    }

    @media (max-width: 426px) {
        .container-entretien {
            padding: 10px;
            margin-top: 160px;
        }
        .title-main {
            font-size: 1.8rem;
        }
        .category-title {
            font-size: 1.5rem;
        }
        .product-image {
            width: 80px;
            height: 80px;
        }
    }

    @keyframes fadeInDown {
        from { opacity: 0; transform: translateY(-20px); }
        to { opacity: 1; transform: translateY(0); }
    }

    @keyframes slideInLeft {
        from { opacity: 0; transform: translateX(-20px); }
        to { opacity: 1; transform: translateX(0); }
    }

    @keyframes fadeInUp {
        from { opacity: 0; transform: translateY(20px); }
        to { opacity: 1; transform: translateY(0); }
    }

    @keyframes fadeIn {
        from { opacity: 0; }
        to { opacity: 1; }
    }
</style>

<div class="container-entretien">
