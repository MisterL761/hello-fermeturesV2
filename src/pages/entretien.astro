<script is:inline src="https://cdnjs.cloudflare.com/ajax/libs/html2canvas/1.4.1/html2canvas.min.js"></script>
<script is:inline>
    function downloadTable() {
        const isMobile = window.innerWidth <= 768;
        const table = document.querySelector('.frequency-table');
        if (isMobile) {
            const originalDisplay = table.style.display;
            table.style.display = 'table';
            table.style.position = 'absolute';
            table.style.left = '-9999px';
            html2canvas(table, {
                backgroundColor: '#1a1a1a',
                scale: 2
            }).then(canvas => {
                const imgData = canvas.toDataURL('image/png');
                const link = document.createElement('a');
                link.href = imgData;
                link.download = 'frequence_entretien.png';
                document.body.appendChild(link);
                link.click();
                document.body.removeChild(link);
                table.style.display = originalDisplay;
                table.style.position = '';
                table.style.left = '';
            }).catch(error => {
                console.error('Error generating image:', error);
                alert('Une erreur s\'est produite lors du téléchargement de l\'image.');
                table.style.display = originalDisplay;
                table.style.position = '';
                table.style.left = '';
            });
        } else {
            let csv = [];
            const headers = Array.from(table.querySelectorAll('th')).map(th => `"${th.textContent}"`);
            csv.push(headers.join(','));
            table.querySelectorAll('tr').forEach(row => {
                const cells = Array.from(row.querySelectorAll('td, th'));
                if (cells.length > 1) {
                    const rowData = cells.map(cell => `"${cell.textContent.replace(/"/g, '""')}"`);
                    csv.push(rowData.join(','));
                }
            });
            const csvContent = csv.join('\n');
            const blob = new Blob([csvContent], { type: 'text/csv;charset=utf-8;' });
            const url = URL.createObjectURL(blob);
            const link = document.createElement('a');
            link.setAttribute('href', url);
            link.setAttribute('download', 'frequence_entretien.csv');
            document.body.appendChild(link);
            link.click();
            document.body.removeChild(link);
        }
    }

    function printCard(card) {
        card.classList.add('print-selected');
        window.print();
        card.classList.remove('print-selected');
    }
</script>
