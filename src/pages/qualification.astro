            <!-- Portails -->
            <div class="mb-12">
                <h3
                    class="font-display text-2xl font-bold uppercase text-white mb-6 border-l-4 border-gold pl-4"
                >
                    Garanties Portails (PVC / ALU ET FER)
                </h3>
                <div class="overflow-x-auto">
                    <table class="guarantee-table">
                        <thead>
                            <tr>
                                <th>Type de Garantie</th>
                                <th>Durée</th>
                            </tr>
                        </thead>
                        <tbody>
                            <tr
                                ><td
                                    >Casse ferrage et serrure (Hors effraction)</td
                                ><td><span class="badge">2 ans</span></td></tr
                            >
                            <tr
                                ><td>Impacts et rayures</td><td
                                    ><span class="badge-red">NON GARANTIE</span
                                    ></td
