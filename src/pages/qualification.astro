                            <tr
                                ><td>Matière PVC PLAXE</td><td
                                    ><span class="badge">10 ans</span></td
                                ></tr
                            >
                            <tr
                                ><td>Matière PVC blanc</td><td
                                    ><span class="badge">15 ans</span></td
                                ></tr
                            >
                            <tr
                                ><td>Matière BOIS / ALUMINIUM</td><td
                                    ><span class="badge">10 ans</span></td
                                ></tr
                            >
                            <tr
                                ><td>Matière ALUMINIUM</td><td
                                    ><span class="badge">10 ans</span></td
                                ></tr
                            >
                            <tr
                                ><td>Matière BOIS</td><td
                                    ><span class="badge">10 ans</span></td
                                ></tr
                            >
                            <tr
                                ><td
                                    >Lasure et peinture sur tous les produits
                                    ayant une finition</td
                                ><td><span class="badge">5 ans</span></td></tr
                            >
                            <tr
                                ><td
                                    >Tenue mécanique des profilés et des angles</td
                                ><td><span class="badge">15 ans</span></td></tr
                            >
                            <tr
                                ><td>Arrachement des paumelles</td><td
                                    ><span class="badge">15 ans</span></td
                                ></tr
                            >
                            <tr
                                ><td
                                    >Stabilité de la teinte profilés PVC blanc</td
                                ><td><span class="badge">15 ans</span></td></tr
                            >
                            <tr
                                ><td
                                    >Stabilité de la teinte profilé PVC beige et
                                    ALUMINIUM, décor laqué hors rayures et
                                    impacts</td
                                ><td><span class="badge">10 ans</span></td></tr
                            >
                            <tr
                                ><td
                                    >Stabilité de la teinte profilé fenêtre PVC
                                    laqué (hors impact et rayures)</td
                                ><td><span class="badge">5 ans</span></td></tr
                            >
                            <tr
                                ><td
                                    >Embuement à l'intérieur du double-vitrage</td
                                ><td><span class="badge">10 ans</span></td></tr
                            >
                            <tr
                                ><td>Rayure du profilé</td><td
                                    ><span class="badge-red">NON GARANTIE</span
                                    ></td
                                ></tr
                            >
                            <tr
                                ><td
                                    >Casse du cylindre de porte ou de fenêtre
                                    (Hors effraction)</td
                                ><td><span class="badge">10 ans</span></td></tr
                            >
                        </tbody>
                    </table>
                </div>
            </div>

            <!-- Fenêtres et Portes-Fenêtres -->
            <div class="mb-12">
                <h3
                    class="font-display text-2xl font-bold uppercase text-white mb-6 border-l-4 border-gold pl-4"
                >
                    Garanties Fenêtres et Portes-Fenêtres
                </h3>
                <div class="overflow-x-auto">
                    <table class="guarantee-table">
                        <thead>
                            <tr>
                                <th>Type de Garantie</th>
                                <th>Durée</th>
                            </tr>
                        </thead>
                        <tbody>
                            <tr
                                ><td
                                    >Structure de la fenêtre (profils, soudure,
                                    renfort)</td
                                ><td><span class="badge">15 ans</span></td></tr
                            >
                            <tr
                                ><td>Vitrage</td><td
                                    ><span class="badge">10 ans</span></td
                                ></tr
                            >
                            <tr
                                ><td
                                    >Ferrure roto (garantie sur le
                                    fonctionnement)</td
                                ><td><span class="badge">10 ans</span></td></tr
                            >
                            <tr
                                ><td>Quincaillerie</td><td
                                    ><span class="badge">10 ans</span></td
                                ></tr
                            >
                            <tr
                                ><td>Laquage</td><td
                                    ><span class="badge">10 ans</span></td
                                ></tr
                            >
                            <tr
                                ><td>Plaxage (bois structuré)</td><td
                                    ><span class="badge">10 ans</span></td
                                ></tr
                            >
                            <tr
                                ><td>Panneau de porte</td><td
                                    ><span class="badge">10 ans</span></td
                                ></tr
                            >
                        </tbody>
                    </table>
                </div>
            </div>

            <!-- Volets Roulants -->
            <div class="mb-12">
                <h3
                    class="font-display text-2xl font-bold uppercase text-white mb-6 border-l-4 border-gold pl-4"
                >
                    Garanties Volets Roulants (PVC/ALU)
                </h3>
                <div class="overflow-x-auto">
                    <table class="guarantee-table">
                        <thead>
                            <tr>
                                <th>Type de Garantie</th>
                                <th>Durée</th>
                            </tr>
                        </thead>
                        <tbody>
                            <tr
                                ><td
                                    >Tenue mécanique de l'enveloppe du coffre de
