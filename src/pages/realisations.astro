<script is:inline>
    document.addEventListener('DOMContentLoaded', () => {
        // Filter functionality
        const filterButtons = document.querySelectorAll('.filter-button, .mobile-filter-button:not(#mobile-filter-toggle)');
        const galleryItems = document.querySelectorAll('.gallery-item');
        const mobileFilterToggle = document.getElementById('mobile-filter-toggle');
        const mobileFilterMenu = document.querySelector('.mobile-filter-menu');

        // Mobile filter toggle
        if (mobileFilterToggle) {
            mobileFilterToggle.addEventListener('click', () => {
                mobileFilterMenu.classList.toggle('active');
            });
        }

        filterButtons.forEach(button => {
            button.addEventListener('click', () => {
                const filter = button.getAttribute('data-filter');

                // Remove active class from all buttons
                filterButtons.forEach(btn => btn.classList.remove('active'));

                // Add active class to clicked button
                button.classList.add('active');

                // Filter items
                galleryItems.forEach(item => {
                    if (filter === 'all') {
                        item.classList.remove('hide');
                        item.classList.add('show');
                    } else {
                        if (item.classList.contains(filter)) {
                            item.classList.remove('hide');
                            item.classList.add('show');
                        } else {
                            item.classList.add('hide');
                            item.classList.remove('show');
                        }
                    }
                });

                // Close mobile menu
                if (mobileFilterMenu) {
                    mobileFilterMenu.classList.remove('active');
                }

                // Scroll to gallery
                const gallery = document.querySelector('.gallery');
                if (gallery) {
                    const galleryTop = gallery.getBoundingClientRect().top + window.pageYOffset - 100;
                    window.scrollTo({ top: galleryTop, behavior: 'smooth' });
                }
            });
        });

        // Lightbox functionality
        const lightbox = document.getElementById('lightbox');
        const slidesContainer = lightbox.querySelector('.slides');
        const closeBtn = lightbox.querySelector('.close');
        const prevBtn = lightbox.querySelector('.prev');
        const nextBtn = lightbox.querySelector('.next');
        const toggleBtn = lightbox.querySelector('.toggle-btn');
        let currentIndex = 0;
        let isBefore = false;
        let items = [];

        // Build items array
        galleryItems.forEach(item => {
            items.push({
                before: item.getAttribute('data-before'),
                after: item.getAttribute('data-after')
            });
        });

        // Open lightbox on item click
        galleryItems.forEach((item, index) => {
            item.addEventListener('click', () => {
                currentIndex = index;
                isBefore = false;
                showLightbox();
            });
        });

        // Close lightbox
        closeBtn.addEventListener('click', () => {
            lightbox.classList.remove('active');
        });

        // Previous image
        prevBtn.addEventListener('click', () => {
            currentIndex = (currentIndex - 1 + items.length) % items.length;
            updateCarousel();
        });

        // Next image
        nextBtn.addEventListener('click', () => {
            currentIndex = (currentIndex + 1) % items.length;
            updateCarousel();
        });

        // Toggle before/after
        toggleBtn.addEventListener('click', () => {
            if (items[currentIndex].before) {
                isBefore = !isBefore;
                updateCarousel();
            }
        });

        function showLightbox() {
            updateCarousel();
            lightbox.classList.add('active');
        }

        function updateCarousel() {
            slidesContainer.innerHTML = '';
            const img = document.createElement('img');

            if (items[currentIndex].before && isBefore) {
                img.src = items[currentIndex].before;
                toggleBtn.style.display = 'block';
                toggleBtn.textContent = "Voir Après";
            } else {
                img.src = items[currentIndex].after;
                toggleBtn.style.display = items[currentIndex].before ? 'block' : 'none';
                toggleBtn.textContent = items[currentIndex].before ? "Voir Avant" : "";
            }

            slidesContainer.appendChild(img);
        }

        // Close lightbox on escape key
        document.addEventListener('keydown', (e) => {
            if (e.key === 'Escape' && lightbox.classList.contains('active')) {
                lightbox.classList.remove('active');
            }
        });

        // Close lightbox on background click
        lightbox.addEventListener('click', (e) => {
            if (e.target === lightbox) {
                lightbox.classList.remove('active');
            }
        });
    });
</script>
