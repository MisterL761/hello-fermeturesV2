<style>
    .container-realisations {
        max-width: 1400px;
        margin: 0 auto;
        padding: 30px 20px;
        margin-top: 180px;
    }

    .title-main {
        text-align: center;
        font-size: 3rem;
        font-weight: 300;
        letter-spacing: 3px;
        position: relative;
        opacity: 0;
        animation: titleFadeIn 1.5s ease-out 0.5s forwards;
        margin-bottom: 50px;
    }

    .title-main::after {
        content: '';
        position: absolute;
        bottom: -10px;
        left: 50%;
        transform: translateX(-50%);
        width: 0;
        height: 2px;
        background: linear-gradient(90deg, transparent, #fff, transparent);
        animation: underlineExpand 2s ease-out 1s forwards;
    }

    @keyframes titleFadeIn {
        from { opacity: 0; transform: translateY(30px); }
        to { opacity: 1; transform: translateY(0); }
    }

    @keyframes underlineExpand {
        to { width: 200px; }
    }

    .video-button-container {
        text-align: center;
        margin: 30px 0 20px 0;
        opacity: 0;
        animation: filterFadeIn 1s ease-out 1.2s forwards;
    }

    .video-button {
        background: linear-gradient(135deg, #ffb103, #ff8c00);
        color: #ffffff;
        border: 2px solid transparent;
        padding: 15px 30px;
        cursor: pointer;
        border-radius: 30px;
        font-weight: 700;
        text-transform: uppercase;
        letter-spacing: 2px;
        font-size: 1.1rem;
        position: relative;
        overflow: hidden;
        transition: all 0.4s cubic-bezier(0.4, 0, 0.2, 1);
        box-shadow: 0 6px 20px rgba(255, 177, 3, 0.3);
        text-decoration: none;
        display: inline-block;
    }

    .video-button::before {
        content: 'üé•';
        margin-right: 10px;
        font-size: 1.2rem;
    }

    .video-button::after {
        content: '';
        position: absolute;
        top: 0;
        left: -100%;
        width: 100%;
        height: 100%;
        background: linear-gradient(90deg, transparent, rgba(255, 255, 255, 0.3), transparent);
        transition: left 0.6s;
    }

    .video-button:hover::after {
        left: 100%;
    }

    .video-button:hover {
        transform: translateY(-2px);
        box-shadow: 0 8px 25px rgba(255, 177, 3, 0.4);
    }

    .filter-container {
        text-align: center;
        margin: 50px 0;
        opacity: 0;
        animation: filterFadeIn 1s ease-out 1.5s forwards;
    }

    @keyframes filterFadeIn {
        from { opacity: 0; transform: translateY(20px); }
        to { opacity: 1; transform: translateY(0); }
    }

    .filter-button {
        background: linear-gradient(135deg, #ffffff 0%, #f0f0f0 100%);
        color: #000000;
        border: 2px solid transparent;
        padding: 12px 24px;
        margin: 8px;
        cursor: pointer;
        border-radius: 25px;
        font-weight: 600;
        text-transform: uppercase;
        letter-spacing: 1px;
        position: relative;
        overflow: hidden;
        transition: all 0.4s cubic-bezier(0.4, 0, 0.2, 1);
        box-shadow: 0 4px 15px rgba(255, 255, 255, 0.1);
    }

    .filter-button::before {
        content: '';
        position: absolute;
        top: 0;
        left: -100%;
        width: 100%;
        height: 100%;
        background: linear-gradient(90deg, transparent, rgba(255, 255, 255, 0.3), transparent);
        transition: left 0.6s;
    }

    .filter-button:hover::before {
        left: 100%;
    }

    .filter-button:hover {
        background: linear-gradient(135deg, #000000 0%, #333333 100%);
        color: #ffffff;
        border-color: #ffffff;
        transform: translateY(-3px);
        box-shadow: 0 8px 25px rgba(255, 255, 255, 0.2);
    }

    .filter-button.active {
        background: linear-gradient(135deg, #ffb103 0%, #ff8c00 100%);
        color: #000;
        border-color: #ffb103;
        box-shadow: 0 0 20px rgba(255, 177, 3, 0.3);
        transform: translateY(-3px);
    }

    .mobile-filter-container {
        display: none;
    }

    .mobile-filter-menu {
        display: none;
    }

    .mobile-filter-menu.active {
        display: block;
    }

    .gallery {
        display: block;
        column-count: 3;
        column-gap: 25px;
        padding: 40px 0;
    }

    .gallery-item {
        break-inside: avoid;
        display: inline-block;
        width: 100%;
        margin-bottom: 25px;
        opacity: 1;
        border-radius: 15px;
        overflow: hidden;
        position: relative;
        background: rgba(255, 255, 255, 0.05);
        backdrop-filter: blur(10px);
        border: 1px solid rgba(255, 255, 255, 0.1);
        cursor: pointer;
        transition: all 0.3s ease;
    }

    .gallery-item.show {
        opacity: 1;
        display: inline-block;
    }

    .gallery-item.hide {
        display: none;
    }

    .gallery-item img {
        width: 100%;
        height: auto;
        display: block;
        object-fit: cover;
        transition: transform 0.3s ease;
    }

    .gallery-item:hover {
        border-color: rgba(255, 177, 3, 0.5);
        box-shadow: 0 8px 25px rgba(255, 177, 3, 0.2);
    }

    .gallery-item:hover img {
        transform: scale(1.05);
    }

    .lightbox {
        display: none;
        position: fixed;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        background: rgba(0, 0, 0, 0.95);
        z-index: 9999;
        justify-content: center;
        align-items: center;
    }

    .lightbox.active {
        display: flex;
    }

    .lightbox-content {
        position: relative;
        max-width: 90%;
        max-height: 90%;
        display: flex;
        justify-content: center;
        align-items: center;
    }

    .slides {
        max-width: 100%;
        max-height: 90vh;
        display: flex;
        justify-content: center;
        align-items: center;
    }

    .slides img {
        max-width: 100%;
        max-height: 90vh;
        object-fit: contain;
        border-radius: 10px;
    }

    .close {
        position: absolute;
        top: -40px;
        right: 0;
        font-size: 40px;
        color: #fff;
        cursor: pointer;
        z-index: 10000;
        transition: color 0.3s;
    }

    .close:hover {
        color: #ffb103;
    }

    .prev, .next {
        position: absolute;
        top: 50%;
        transform: translateY(-50%);
        background: rgba(255, 177, 3, 0.8);
        color: #000;
        border: none;
        padding: 15px 20px;
        cursor: pointer;
        font-size: 24px;
        border-radius: 5px;
        transition: all 0.3s;
        z-index: 10000;
    }

    .prev {
        left: 20px;
    }

    .next {
        right: 20px;
    }

    .prev:hover, .next:hover {
        background: #ffb103;
        transform: translateY(-50%) scale(1.1);
    }

    .toggle-btn {
        position: absolute;
        bottom: 20px;
        left: 50%;
        transform: translateX(-50%);
        background: linear-gradient(135deg, #ffb103, #ff8c00);
        color: #fff;
        border: none;
        padding: 12px 24px;
        cursor: pointer;
        border-radius: 25px;
        font-weight: 600;
        text-transform: uppercase;
        letter-spacing: 1px;
        transition: all 0.3s;
        z-index: 10000;
    }

    .toggle-btn:hover {
        transform: translateX(-50%) translateY(-3px);
        box-shadow: 0 8px 25px rgba(255, 177, 3, 0.4);
    }

