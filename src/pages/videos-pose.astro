<script is:inline>
    function filterSelection(category) {
        // Remove active class from all buttons
        document.querySelectorAll('.filter-button').forEach(btn => btn.classList.remove('active'));

        // Add active class to the clicked button
        const buttons = document.querySelectorAll(`[onclick="filterSelection('${category}')"]`);
        buttons.forEach(btn => btn.classList.add('active'));

        // Get all video items
        let items = document.querySelectorAll('.video-item');

        // Reset all items
        items.forEach(item => {
            item.classList.remove('show', 'hide');
            item.style.display = 'none';
        });

        // Determine which items to show
        let itemsToShow = [];
        if (category === 'all') {
            itemsToShow = Array.from(items);
        } else {
            itemsToShow = Array.from(items).filter(item => item.classList.contains(category));
        }

        setTimeout(() => {
            itemsToShow.forEach((item, index) => {
                item.style.display = 'block';
                setTimeout(() => {
                    item.classList.add('show');
                }, index * 50);
            });
        }, 50);

        // Close mobile menu
        const mobileMenu = document.querySelector('.mobile-filter-menu');
        if (mobileMenu) {
            mobileMenu.classList.remove('active');
        }
    }

    function toggleMobileFilters() {
        document.querySelector('.mobile-filter-menu').classList.toggle('active');
    }

    function openVideoModal(overlay) {
        const videoItem = overlay.parentElement;
        const iframe = videoItem.querySelector('iframe');
        let videoSrc = iframe.src;

        // Add autoplay if not present
        if (!videoSrc.includes('autoplay=1')) {
            videoSrc += (videoSrc.includes('?') ? '&' : '?') + 'autoplay=1';
        }

        const modal = document.getElementById('videoModal');
        const modalVideo = document.getElementById('modalVideo');
        modalVideo.src = videoSrc;
        modal.style.display = 'flex';
        document.body.style.overflow = 'hidden';
    }

    function closeVideoModal() {
        const modal = document.getElementById('videoModal');
        const modalVideo = document.getElementById('modalVideo');
        modalVideo.src = '';
        modal.style.display = 'none';
        document.body.style.overflow = 'auto';
    }

    window.onclick = function(event) {
        if (event.target == document.getElementById('videoModal')) {
            closeVideoModal();
        }
    }

    document.addEventListener('keydown', function(event) {
        if (event.key === 'Escape') {
            closeVideoModal();
        }
    });
</script>

